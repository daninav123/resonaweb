# ============================================
# RESONA - Variables de Entorno PRODUCCIÓN
# ============================================
# IMPORTANTE: NO COMMITEAR este archivo con valores reales
# Este es un ejemplo. Copia a .env.production y configura valores reales

# ============================================
# GENERAL
# ============================================
NODE_ENV=production
FRONTEND_PORT=3000
BACKEND_PORT=3001

# ============================================
# BACKEND
# ============================================

# Database - USAR BASE DE DATOS DE PRODUCCIÓN
DATABASE_URL=postgresql://user:password@host:5432/resona_prod

# JWT Secrets - GENERAR CON: openssl rand -base64 64
# ⚠️ CRÍTICO: Cambiar estos valores en producción
JWT_SECRET=CAMBIAR_ESTE_SECRET_GENERADO_CON_OPENSSL
JWT_REFRESH_SECRET=CAMBIAR_ESTE_REFRESH_SECRET_GENERADO_CON_OPENSSL
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS - Dominios permitidos (separar con comas)
CORS_ORIGIN=https://tudominio.com,https://www.tudominio.com
FRONTEND_URL=https://tudominio.com

# ============================================
# EMAIL - PRODUCCIÓN (SendGrid recomendado)
# ============================================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=TU_SENDGRID_API_KEY
EMAIL_FROM=noreply@tudominio.com
EMAIL_COMPANY_NAME=ReSona Events
BACKUP_ERROR_EMAIL=admin@tudominio.com

# ============================================
# STRIPE - MODO LIVE
# ============================================
# ⚠️ CRÍTICO: Usar claves LIVE de Stripe
STRIPE_SECRET_KEY=sk_live_TU_CLAVE_SECRETA_LIVE
STRIPE_PUBLISHABLE_KEY=pk_live_TU_CLAVE_PUBLICA_LIVE
STRIPE_WEBHOOK_SECRET=whsec_TU_WEBHOOK_SECRET_LIVE
STRIPE_SUCCESS_URL=https://tudominio.com/checkout/success
STRIPE_CANCEL_URL=https://tudominio.com/checkout/cancel

# ============================================
# CLOUDINARY - PRODUCCIÓN
# ============================================
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret
CLOUDINARY_UPLOAD_PRESET=resona_products_prod
CLOUDINARY_FOLDER=resona_prod

# ============================================
# GOOGLE MAPS
# ============================================
GOOGLE_MAPS_API_KEY=TU_GOOGLE_MAPS_API_KEY

# ============================================
# SEGURIDAD
# ============================================
# Rate Limiting - Más estricto en producción
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Upload limits
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ============================================
# MONITORING
# ============================================
# Grafana
GRAFANA_PORT=3002
GRAFANA_ADMIN_PASSWORD=CAMBIAR_PASSWORD_SEGURO

# Prometheus
PROMETHEUS_PORT=9090

# Slack Webhook para alertas
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/TU_WEBHOOK_REAL

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# FEATURES
# ============================================
ENABLE_ANALYTICS=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_PUSH_NOTIFICATIONS=false

# ============================================
# DATOS DEL NEGOCIO
# ============================================
BUSINESS_NAME=ReSona - Alquiler Material Eventos
BUSINESS_LEGAL_NAME=Tu Razón Social S.L.
BUSINESS_TAX_ID=B12345678
BUSINESS_ADDRESS_STREET=Calle Real 123
BUSINESS_ADDRESS_CITY=Valencia
BUSINESS_ADDRESS_POSTAL_CODE=46001
BUSINESS_ADDRESS_COUNTRY=España
BUSINESS_EMAIL=contacto@tudominio.com
BUSINESS_PHONE=+34 613 881 414
BUSINESS_WEBSITE=https://tudominio.com

# ============================================
# COMPANY DATA (Para facturas y emails)
# ============================================
COMPANY_NAME=ReSona Events Valencia
COMPANY_EMAIL=info@tudominio.com
COMPANY_PHONE=+34 613 881 414
COMPANY_ADDRESS=Valencia, España
COMPANY_WEBSITE=https://tudominio.com

# ============================================
# SEO
# ============================================
SITE_NAME=ReSona Events
SITE_URL=https://tudominio.com
SITE_DESCRIPTION=Alquiler de material audiovisual profesional para eventos en Valencia

# ============================================
# BACKUPS
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=resona-backups-prod

# ============================================
# ORDEN EXPIRACIÓN
# ============================================
ORDER_EXPIRATION_MINUTES=30
ORDER_CHECK_INTERVAL_MINUTES=5
ORDER_EXPIRATION_RUN_ON_START=true
