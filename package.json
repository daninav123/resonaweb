{
  "name": "resona",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de gestiÃ³n de alquiler de material para eventos",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start --workspace=backend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev:quick --workspace=backend",
    "dev:backend:nodemon": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test:ci --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test tests/e2e/01-smoke.spec.ts",
    "test:e2e:auth": "playwright test tests/e2e/02-authentication.spec.ts",
    "test:e2e:client": "playwright test tests/e2e/03-catalog-products.spec.ts tests/e2e/04-cart.spec.ts tests/e2e/05-checkout-orders.spec.ts",
    "test:e2e:admin": "playwright test tests/e2e/07-admin-products.spec.ts tests/e2e/08-admin-orders-users.spec.ts",
    "test:e2e:report": "playwright show-report",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "seo:sitemap": "node generate-sitemap.js",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:push": "npm run db:push --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:migrate:dev": "npm run db:migrate:dev --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend",
    "db:studio": "npm run db:studio --workspace=backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "install:all": "npm install",
    "prepare": "node -e \"try { if (process.env.NODE_ENV !== 'production' && process.env.VERCEL !== 'true') require('husky').install() } catch(e) {}\""
  },
  "keywords": ["rental", "events", "management", "resona"],
  "author": "ReSona",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

