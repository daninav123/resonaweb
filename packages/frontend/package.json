{
  "name": "frontend",
  "version": "1.0.0",
  "description": "ReSona Frontend Application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/generate-pack-pages.js && node scripts/generate-static-pages.js",
    "build:check": "tsc && vite build && node scripts/generate-pack-pages.js && node scripts/generate-static-pages.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:critical": "playwright test tests/e2e/user/auth.spec.ts tests/e2e/user/checkout.spec.ts tests/e2e/admin/orders.spec.ts",
    "test:setup": "tsx tests/setup/seedDatabase.ts",
    "test:e2e:full": "npm run test:setup && playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^2.0.2",
    "@stripe/react-stripe-js": "^2.9.0",
    "@stripe/stripe-js": "^2.4.0",
    "@stripe/terminal-js": "^0.26.0",
    "@tanstack/react-query": "^5.12.2",
    "@tanstack/react-query-devtools": "^5.13.5",
    "@types/canvas-confetti": "^1.9.0",
    "axios": "^1.6.2",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.292.0",
    "moment": "^2.30.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^20.0.11",
    "postcss": "^8.4.32",
    "react-snap": "^1.23.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.44.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-remove-console": "^2.2.0",
