{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.resonaevents.com"
        }
      ],
      "destination": "https://resonaevents.com/:path*",
      "permanent": true
    },
    {
      "source": "/packs",
      "destination": "/productos?category=packs",
      "permanent": true
    },
    {
      "source": "/calculadora",
      "destination": "/calculadora-evento",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "https://resona-backend.onrender.com/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "https://resona-backend.onrender.com/robots.txt"
    },
    {
      "source": "/calculadora-evento",
      "destination": "/calculadora-evento.html"
    },
    {
      "source": "/faqs",
      "destination": "/faqs.html"
    },
    {
      "source": "/alquiler-altavoces-valencia",
      "destination": "/alquiler-altavoces-valencia.html"
    },
    {
      "source": "/alquiler-sonido-valencia",
      "destination": "/alquiler-sonido-valencia.html"
    },
    {
      "source": "/alquiler-iluminacion-valencia",
      "destination": "/alquiler-iluminacion-valencia.html"
    },
    {
      "source": "/sonido-bodas-valencia",
      "destination": "/sonido-bodas-valencia.html"
    },
    {
      "source": "/alquiler-sonido-torrent",
      "destination": "/alquiler-sonido-torrent.html"
    },
    {
      "source": "/packs/:slug",
      "destination": "/packs/:slug.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path*\\.(js|css|json|ico|svg|png|jpg|jpeg|webp|woff|woff2)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
